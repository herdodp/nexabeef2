<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".toolskerugianberat">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        tools:ignore="MissingConstraints" />



    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/etInitialWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:hint="Berat Awal (Kg)"
                android:inputType="numberDecimal"
                tools:ignore="NotSibling" />

            <EditText
                android:id="@+id/etFinalWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etInitialWeight"
                android:layout_margin="16dp"
                android:hint="Berat Akhir (Kg)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/hargaawal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etFinalWeight"
                android:layout_margin="16dp"
                android:hint="Harga sebelum dipotong (Rp)"
                android:inputType="number" />

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hargaawal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Hitung" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnCalculate"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Persentase kerugian berat: "
                android:layout_marginBottom="16dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/kerugian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvResult"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Kerugian: Rp "
                android:layout_marginBottom="16dp"
                android:textSize="18sp" />






        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
